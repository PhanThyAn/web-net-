                        <i class="fa fa-star" aria-hidden="true"></i>
                        <i class="fa fa-star" aria-hidden="true" style="color: darkgray"></i>
                    }
                    else if (productDetail.Rate == 4.5)
                    {
                        <i class="fa fa-star-half-o" aria-hidden="true"></i>
                        <i class="fa fa-star" aria-hidden="true" style="color: darkgray"></i>
                    }
                    else if (productDetail.Rate == 5.0)
                    {
